---

import SectionList from "./common/section-list.astro";
import type { ListItem } from "@/types/content";
import { DISCORD_INVITE_LINK } from "@/utils/constants";

const documentationItems: ListItem[] = [
  {
    title: "Main Documentation",
    description: `You can find the majority of our documentation in one easy and convenient place. If you feel there is something missing, we would love to hear about it and improve it.`,
    image: "phosphor/duotone/books-duotone",
    link: DISCORD_INVITE_LINK,
    linkText: "Learn more"
  },
