---
import Layout from "@/layouts/Layout.astro";
import Guides from "@/layouts/Guides.astro";
import { Card, CardHeader, CardTitle, CardContent } from "@/components/ui/card";

import Icon from "astro-icon";

// import { Icon } from "@iconify/react";
// import roundDoubleAltArrowRightLinear from "@iconify/icons-solar/round-double-alt-arrow-right-linear";
// import plugCircleBold from '@iconify/icons-solar/plug-circle-bold';

import { buttonVariants } from "@/components/ui/button";
interface GuideSection {
  icon: string;
  title: string;
  description: string;
  link: string;
  linkText: string;
}

const sections: GuideSection[] = [
  {
    title: "Creating a Client SDK",
    description:
      "Client SDKs are what make Vexilla work. If we don't have one for your language, yet. You can create one!",
    link: "/guides/creating-a-client-sdk",
    linkText: "Learn more",
    icon: "phosphor/duotone/plug-duotone",
  },
];
---

<Layout title="Guides | Vexilla">
  <Guides>
    <h1>Guides</h1>
    <div class="flex flex-wrap">
      {
        sections.map((section) => (
          <div class="w-full md:w-1/2 p-2">
            <Card className="h-full flex flex-col">
              <CardHeader>
                <CardTitle className="!m-0 flex flex-row items-start">
                  <div class="bg-primary-500 rounded-full p-2 mt-[0.1rem]">
                    <Icon name={section.icon} width={24} color="white" />
                  </div>
                  <a href={section.link} class="no-underline ml-2">
                    {section.title}
                  </a>
                </CardTitle>
                <hr class="!mt-7" />
              </CardHeader>
              <CardContent className="flex flex-col h-full">
                <p class="flex flex-1">{section.description}</p>
                <div class="flex flex-row justify-end mt-auto">
                  <a
                    class={`flex flex-row items-center no-underline ${buttonVariants(
                      {
                        variant: "outline",
                      }
                    )}`}
                    href={section.link}
                    aria-hidden="true"
                  >
                    {section.linkText}

                    <div class="ml-2 bg-primary-500 rounded-full">
                      <Icon name="phosphor/duotone/arrow-circle-right-duotone" width={24} color="white" />
                    </div>
                  </a>
                </div>
              </CardContent>
            </Card>
          </div>
        ))
      }
    </div>
  </Guides>
</Layout>
